@model StudentViewModel

@{
    Layout = "_LayoutForAdmin";
}

<div class="container">
    <h2>Редактирование информации о студенте</h2>

    <form class="form-signin" asp-controller="Admin" asp-action="EditStudentConfirmed" method="post">
        <div asp-validation-summary="ModelOnly"></div>

        <input type="hidden" name="Email" value="@Model.Email" />

        <div>
            <label asp-for="Surname">Фамилия</label><br />
            <input asp-for="Surname" class="form-control" placeholder="Иванов" />
            <span asp-validation-for="Surname"></span>
        </div>

        <div>
            <label asp-for="Name">Имя</label><br />
            <input asp-for="Name" class="form-control" placeholder="Иван" />
            <span asp-validation-for="Name"></span>
        </div>

        <div>
            <label asp-for="Patronymic">Отчество</label><br />
            <input asp-for="Patronymic" class="form-control" placeholder="Иванович" />
            <span asp-validation-for="Patronymic"></span>
        </div>

        <div>
            <label asp-for="PhoneNumber">Номер телефона</label><br />
            <input asp-for="PhoneNumber" class="form-control" placeholder="+38XXXXXXXXXX" />
            <span asp-validation-for="PhoneNumber"></span>
        </div>

        <div>
            <label>Группа</label><br />
            @Html.DropDownListFor(m => m.GroupId, Model.GroupItems, "Выберите группу", new { @class = "form-control" })
        </div>

        <div class="form-check">
            <input type="checkbox" asp-for="IsAccepted" class="form-check-input" />
            <label asp-for="IsAccepted" class="form-check-label">Подтверждение</label>
        </div>

        <p class="mt-3 mb-3 "></p>

        <button class="btn btn-lg btn-primary btn-block" type="submit">Подтвердить</button>

    </form>
</div>