@model FacultyViewModel

@{
    Layout = "_LayoutForAdmin";
}

<div class="align-content-xl-center">
    <a asp-controller="Admin" asp-action="AddFaculty">Добавить факультет</a>
</div>
    <table class="table">
        <thead>
            <tr>
                <th>Название факультета</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (Faculty faculty in Model.AllFaculties)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => faculty.Name)</td>

                    <td>
                        <a asp-action="Details" asp-route-id="@faculty.Id">Детали</a> |
                        <a asp-controller="Admin" asp-action="DeleteFaculty" asp-route-id="@faculty.Id">Удалить</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>