@model IEnumerable<Mentor.Models.New>
@{
    ViewData["Title"] = "Все новости";
}

<p id="newsSite">Все новости</p>
<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Заголовок</th>
            <th scope="col">Время</th>
            <th scope="col">Удалить</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var news in Model)
        {
            <tr>
                <th scope="row">@news.Heading</th>
                <th scope="row">@news.DateTime</th>
                <th scope="row">
                    <a class="btn btn-danger" asp-action="DeleteNew" asp-controller="New" method="post" asp-route-id="@news.Id" data-toggle="modal" data-target="#exampleModal">Удалить</a>
                </th>
            </tr>
        }

    </tbody>
</table>
<a class="btn btn-success" asp-action="AddNew" asp-controller="New">Добавить новость</a>


<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
            </div>
            <div class="modal-footer">

            </div>
        </div>
    </div
</div>

