@model IEnumerable<Mentor.Models.New>
@{
    ViewData["Title"] = "Все новости";
}

<p id="newsSite">Все новости</p>
<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Заголовок</th>
            <th scope="col">Время</th>
            <th scope="col">Удалить</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var news in Model)
        {
            <tr>
                <th scope="row">@news.Heading</th>
                <th scope="row">@news.DateTime</th>
                <th scope="row">
                    <a class="btn btn-danger" asp-action="DeleteNew" asp-controller="New" method="post" asp-route-id="@news.Id" data-toggle="modal" data-target="#exampleModalCenter">Удалить</a>
                </th>
            </tr>
        }

    </tbody>
</table>
<a class="btn btn-success" asp-action="AddNew" asp-controller="New">Добавить новость</a>

<!-- Modal -->
<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content" id="colorModal">
            
        </div>
    </div>
</div>

