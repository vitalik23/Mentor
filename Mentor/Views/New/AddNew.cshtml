@model New

@{
    ViewData["Title"] = "Добавить новость";
}
    <p>
        <form method="post" asp-controller="New" asp-action="AddNew">
            <input type="hidden" value="@ViewBag.NewId" name="NewId" />

            <div class="form-group row">
                <label class="col-md-4" align="right">Заголовок</label>
                <input class="form-control col-md-4" name="Heading" type="text" placeholder="Название новости">
            </div>

            <div class="form-group row">
                <label class="col-md-4" align="right">Комментарий</label>
                <textarea class="form-control col-md-4" id="exampleFormControlTextarea1" name="Contents" rows="3" placeholder="Информация для пользователей"></textarea>
            </div>
            <center>
                <div class="form-group">
                    <button class="btn btn-success" type="submit">Добавить</button>
                </div>
            </center>
        </form>


    </p>