@model ChooseUserType

@{
    if (Model.UserType == null || Model.UserType == "")
    {
        // Ask user to choose user type
        @await Html.PartialAsync("ChooseUserType")

    }
    else if (Model.UserType.Equals("Student"))
    {
        // student registration form
        @await Component.InvokeAsync("StudentRegistration")

    }
    else if (Model.UserType.Equals("Teacher"))
    {
        // teacher registration form

    }
}