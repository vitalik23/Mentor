@model Mentor.ViewModels.RegisterStudentViewModel

<h2>Регистрация студента</h2>

<form class="form-signin" method="post" asp-controller="Account" asp-action="StudentRegister">
    <div asp-validation-summary="ModelOnly"></div>

    <div>
        <label asp-for="Name"></label><br />
        <input asp-for="Name" class="form-control" placeholder="Иван" />
        <span asp-validation-for="Name"></span>
    </div>

    <div>
        <label asp-for="Surname"></label><br />
        <input asp-for="Surname" class="form-control" placeholder="Иванов" />
        <span asp-validation-for="Surname"></span>
    </div>

    <div>
        <label asp-for="Patronymic"></label><br />
        <input asp-for="Patronymic" class="form-control" placeholder="Иванович" />
        <span asp-validation-for="Patronymic"></span>
    </div>

    <div>
        <label asp-for="Email"></label><br />
        <input asp-for="Email" class="form-control" placeholder="ivanov@ivanoc.com" />
        <span asp-validation-for="Email"></span>
    </div>

    <div>
        <label asp-for="PhoneNumber"></label><br />
        <input asp-for="PhoneNumber" class="form-control" placeholder="+38XXXXXXXXXX" />
        <span asp-validation-for="PhoneNumber"></span>
    </div>

    <div>
        <label asp-for="Birthday"></label><br />
        <input asp-for="Birthday" type="date" class="form-control" />
        <span asp-validation-for="Birthday"></span>
    </div>

    <div>
        <label asp-for="Password"></label><br />
        <input asp-for="Password" class="form-control" />
        <span asp-validation-for="Password"></span>
    </div>

    <div>
        <label asp-for="PasswordConfirm"></label><br />
        <input asp-for="PasswordConfirm" class="form-control" />
        <span asp-validation-for="PasswordConfirm"></span>
    </div>

    <div>
        <label>Группа</label><br />
        @Html.DropDownListFor(m => m.GroupId, Model.GroupItems, "Выберите группу", new { @class = "form-control", @type="submit"})
    </div>

    <p class="mt-3 mb-3 "></p>

    <button class="btn btn-lg btn-primary btn-block">Регистрация</button>
    <p class="mt-5 mb-3 text-muted">© 2017-2019</p>

</form>

