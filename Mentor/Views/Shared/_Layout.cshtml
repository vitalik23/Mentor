                        {
                            <p>@User.Identity.Name</p>

                            <form method="post" asp-controller="Account" asp-action="Logout">
                                <button type="submit" class="btn btn-danger">Выход</button>
                            </form>
                        }
                        else
                        {
                            <li class="nav-item active">
                                <form method="get" asp-controller="Account" asp-action="Login">
                                    <button type="submit" class="btn btn-danger">Вход</button>
                                </form>
                            
                            </li>

                            <li class="nav-item active">
                                <form method="get" asp-controller="Account" asp-action="ChooseUserType">
                                    <button type="submit" class="btn btn-danger">Регистрация</button>
                                </form>
                            </li>
                        }



